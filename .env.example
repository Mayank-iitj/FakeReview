# Application Settings
APP_NAME="Fake Review Detection System"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=True
SECRET_KEY="your-secret-key-change-in-production"

# API Settings
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/fake_review_db"
DATABASE_ECHO=False
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis (for caching and task queue)
REDIS_URL="redis://localhost:6379/0"

# Machine Learning
MODEL_PATH="data/models"
MODEL_VERSION="v1.0"
PREDICTION_THRESHOLD=0.5
ENSEMBLE_WEIGHTS="0.4,0.35,0.25"  # RF, XGBoost, SVM

# Web Scraping
SCRAPER_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
SCRAPER_HEADLESS=True
SCRAPER_TIMEOUT=30
SCRAPER_RATE_LIMIT=2  # seconds between requests
SCRAPER_MAX_RETRIES=3

# Amazon Scraper
AMAZON_BASE_URL="https://www.amazon.com"
AMAZON_API_KEY=""  # Optional: for Product Advertising API

# Flipkart Scraper
FLIPKART_BASE_URL="https://www.flipkart.com"
FLIPKART_API_KEY=""

# Platform API Integration (for deletion requests)
PLATFORM_API_ENABLED=False
AMAZON_PARTNER_ID=""
AMAZON_PARTNER_SECRET=""
FLIPKART_MERCHANT_ID=""
FLIPKART_MERCHANT_SECRET=""

# NLP Settings
NLP_MODEL="bert-base-uncased"
NLP_MAX_LENGTH=512
NLP_BATCH_SIZE=32
NLTK_DATA_PATH="./nltk_data"

# Flagging Thresholds
FAKE_PROBABILITY_THRESHOLD=0.7
SUSPICIOUS_REVIEW_BURST=5  # reviews in 24h from same user
TRUST_SCORE_MIN=0.3
IP_CLUSTER_THRESHOLD=10

# Email Notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@example.com"
SMTP_PASSWORD="your-app-password"
NOTIFICATION_FROM="noreply@fakereviewdetector.com"
ADMIN_EMAIL="admin@example.com"

# Authentication
JWT_SECRET_KEY="your-jwt-secret-key"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Dashboard
STREAMLIT_PORT=8501
STREAMLIT_THEME="light"

# Monitoring
SENTRY_DSN=""
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"
LOG_FILE="logs/app.log"

# Testing
TEST_DATABASE_URL="postgresql://user:password@localhost:5432/fake_review_test_db"
