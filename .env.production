# Production Environment Configuration Template
# IMPORTANT: DO NOT commit this file to git with real credentials
# Use this template and replace values with your actual production settings

# ==================== DATABASE CONFIGURATION ====================
DATABASE_URL=postgresql://username:password@localhost:5432/fake_review_db_prod
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=False

# ==================== API CONFIGURATION ====================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=False
API_LOG_LEVEL=INFO
ENVIRONMENT=production

# ==================== SECURITY CONFIGURATION ====================
JWT_SECRET_KEY=your-super-secret-key-min-32-characters-long-replace-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== CORS CONFIGURATION ====================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://admin.yourdomain.com
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Authorization,Content-Type

# ==================== MACHINE LEARNING CONFIGURATION ====================
ML_MODEL_PATH=./models/ensemble_model.pkl
PREDICTION_THRESHOLD=0.5
CONFIDENCE_THRESHOLD=0.7
USE_BERT=True
NLP_MODEL=bert-base-uncased
NLP_BATCH_SIZE=32
NLP_MAX_LENGTH=512

# ==================== ENSEMBLE WEIGHTS ====================
# Must sum to 1.0
ENSEMBLE_WEIGHTS=0.4,0.35,0.25

# ==================== SCRAPER CONFIGURATION ====================
SCRAPER_HEADLESS=True
SCRAPER_TIMEOUT=30
SCRAPER_RETRIES=3
SCRAPER_DELAY_MIN=2
SCRAPER_DELAY_MAX=5
SCRAPER_CHROME_PATH=/usr/bin/chromium

# ==================== EMAIL NOTIFICATION CONFIGURATION ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True
NOTIFICATION_FROM=noreply@yourdomain.com
NOTIFICATION_ADMIN_EMAIL=admin@yourdomain.com

# ==================== REDIS CONFIGURATION (Optional) ====================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600
USE_REDIS=True

# ==================== LOGGING CONFIGURATION ====================
LOG_LEVEL=INFO
LOG_FILE=./logs/api.log
LOG_FILE_SIZE_MB=100
LOG_FILE_BACKUP_COUNT=10
LOG_FORMAT=json

# ==================== MONITORING & OBSERVABILITY ====================
ENABLE_METRICS=True
METRICS_PORT=9090
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

# ==================== RATE LIMITING ====================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# ==================== AWS CONFIGURATION (Optional - for S3, SQS, etc.) ====================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=fake-review-detector-models
AWS_SQS_QUEUE_URL=

# ==================== GCP CONFIGURATION (Optional) ====================
GCP_PROJECT_ID=
GCP_SERVICE_ACCOUNT_JSON=./credentials/gcp-key.json
GOOGLE_APPLICATION_CREDENTIALS=./credentials/gcp-key.json

# ==================== AZURE CONFIGURATION (Optional) ====================
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_CONTAINER_NAME=fake-review-detector

# ==================== EXTERNAL API INTEGRATIONS ====================
# Amazon API (for automated review deletion, if available)
AMAZON_API_KEY=
AMAZON_API_SECRET=

# Flipkart API (if partnership established)
FLIPKART_API_KEY=
FLIPKART_API_SECRET=

# ==================== FEATURE FLAGS ====================
FEATURE_AUTO_FLAGGING=True
FEATURE_AUTO_DELETION=False
FEATURE_SENTIMENT_ANALYSIS=True
FEATURE_IP_CLUSTERING=True
FEATURE_USER_PROFILING=True
FEATURE_BATCH_PROCESSING=True
FEATURE_WEBHOOKS=False

# ==================== BATCH PROCESSING ====================
BATCH_MAX_SIZE=10000
BATCH_TIMEOUT_SECONDS=300
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==================== CLEANUP & RETENTION ====================
DELETE_FLAGGED_REVIEWS_AFTER_DAYS=90
DELETE_LOGS_AFTER_DAYS=30
ARCHIVE_OLD_MODELS_AFTER_DAYS=180

# ==================== PERFORMANCE TUNING ====================
CONNECTION_POOL_SIZE=20
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT_SECONDS=30
BACKGROUND_TASK_WORKERS=4

# ==================== DEBUG & DEVELOPMENT ====================
DEBUG=False
TESTING=False
SHOW_SQL_QUERIES=False
PROFILE_REQUESTS=False

# ==================== CUSTOM SETTINGS ====================
# Add any project-specific settings below
COMPANY_NAME=YourCompany
COMPANY_CONTACT_EMAIL=support@yourdomain.com
